{
  "name": "claude-langfuse-hooks",
  "version": "2.0.0",
  "description": "Langfuse tracing hooks for Claude Code",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "trace": "node dist/langfuse-hook.js",

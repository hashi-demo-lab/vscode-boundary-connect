    "@langfuse/tracing": "^4.4.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "typescript": "^5.0.0",
    "vitest": "^4.0.14"
  }
}
